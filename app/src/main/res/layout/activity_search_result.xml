<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainimage2"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/imgVBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="14dp"
        android:layout_y="12dp"
        app:srcCompat="@drawable/back"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="23dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="105dp"
        android:layout_y="50dp"
        android:drawableLeft="@drawable/search_result"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="Resultados"
        android:textSize="24dp"
        android:textStyle="normal|bold|italic" />


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="604dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_y="0dp">


    </ScrollView>

    <ListView
        android:id="@+id/lVResults"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ScrollView01"
        android:layout_y="140dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="228dp" />

</AbsoluteLayout>
